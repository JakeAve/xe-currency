{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "strict": false,
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "include": ["src", "src/**/*.json"],
  "exclude": ["node_modules"]
}
